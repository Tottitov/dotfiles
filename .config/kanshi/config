profile main {
    output "eDP-1" enable scale 2 adaptive_sync on
}

profile home {
    output eDP-1 disable
    output "LG Electronics LG HDR 4K 410NTJJ7M428" scale 2
    exec brightnessctl --device='*::kbd_backlight' set 0
}

profile office {
    output eDP-1 scale 2 position 1920,0
    output "Dell Inc. DELL S2721QS 57HWZY3" scale 2 position 0,0
}
