#!/bin/fish

function sc
    set script (fd . ~/.local/bin -t l | fzf --reverse)
    test -n "$script"; and $EDITOR $script
end

function cf
    set config (fd . ~/.config -t l | fzf --reverse)
    test -n "$config"; and $EDITOR $config
end

alias h helix
alias ze zellij
alias sudo doas
alias ls "eza -la --color=auto --group-directories-first"
alias mi "rate-mirrors artix | doas tee /etc/pacman.d/mirrorlist"
alias up "yay -Syu"
alias tag "beet import -i ~/media/music/"
alias ev "qcal -7"
alias vw csvlens

alias cad "source ~/.local/share/virtual/build123d/bin/activate.fish"
alias vcad "python -m ocp_vscode --no_tools"
