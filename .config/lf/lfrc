set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

set shell dash
set scrolloff 8
set period 1
set sixel
set drawbox
set hidden
set ignorecase
set ifs "\n"

cmd open ${{
    case $(file --mime-type $f -b) in
        text/*|application/json) $EDITOR $f ;;
        application/pdf) zathura $f ;;
        video/*) mpv $f ;;
        image/*) imv $f ;;
        *) xdg-open $f ;;
    esac
}}

cmd extract ${{
  set -f
  case $f in
    *.zip) unzip $f;;
    *.rar) unrar x $f;;
  esac
}}

map u clear
map <enter> shell
map <c-d> delete
map gc cd ~/.config
map sc cd ~/.local/bin
map gd cd ~/docs
map gl cd ~/media/downloads
map gm cd ~/media/music
map gp cd ~/media/pictures
map gw cd ~/media/pictures/wallpapers
map gv cd ~/media/videos
map gf cd ~/.local/share/dotfiles
