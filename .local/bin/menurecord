#!/bin/sh

checkCamera() {
	camera=$(find /dev/video[02468] | tail -n 1)
	[ -n "$camera" ] && return "$camera" ||
		notify-send "No camera detected" && askRecording
}

killRecording() {
	recpid="$(cat /tmp/recordingpid)"
	kill -15 "$recpid"
	rm -f /tmp/recordingpid
	pkill -RTMIN+3 waybar
}

video() {
	wf-recorder -a \
		-C aac \
		-c libx264rgb \
		-f "$HOME/screencast-$(date '+%y%m%d-%H%M-%S').mp4" &
	echo $! >/tmp/recordingpid
	pkill -RTMIN+3 waybar
}

snippet() {
	wf-recorder \
		-g "$(slurp)" \
		-c libx264rgb \
		-f "$HOME/video-$(date '+%y%m%d-%H%M-%S').mkv" &
	echo $! >/tmp/recordingpid
	pkill -RTMIN+3 waybar
}

webcam() {
	ffmpeg \
		-f v4l2 \
		-i "$1" \
		-video_size 640x480 \
		"$HOME/webcam-$(date '+%y%m%d-%H%M-%S').mkv" &
	echo $! >/tmp/recordingpid
	pkill -RTMIN+3 waybar
}

audio() {
	ffmpeg \
		-f alsa -i default \
		-c:a flac \
		"$HOME/audio-$(date '+%y%m%d-%H%M-%S').flac" &
	echo $! >/tmp/recordingpid
	pkill -RTMIN+3 waybar
}

askRecording() {
	choice=$(printf "video\naudio\nsnippet\nwebcam" | fuzzel -l 4 -w 10 -di)
	case "$choice" in
	video) video ;;
	audio) audio ;;
	snippet) snippet ;;
	webcam) [ -n "$(checkCamera)" ] && webcam "$(checkCamera)" ;;
	*) exit 0 ;;
	esac
}

askToEnd() {
	choice=$(printf "Nope\nSure" |
		fuzzel -l 2 -w 15 -dip "End recording? ")
	[ "$choice" = "Sure" ] && killRecording || exit 0
}

[ "$1" = "kill" ] && killRecording ||
	([ -f /tmp/recordingpid ] && askToEnd) || askRecording
