#!/bin/sh

check() {
	if nmcli dev wifi con "$2" password "$1"; then
		notify-send -r 5 "Password succeeded for $2"
	else
		notify-send -r 5 -u critical "Password failed for $2"
		nmcli con delete "$2"
	fi >/dev/null 2>&1
}

connect() {
	saved=$(nmcli -g name con show | rg "$1")
	if [ -z "$saved" ] && [ -n "$security" ]; then
		password=$(fuzzel -l 0 -w 50 --password -dip "Password: ") || exit 0
		check "$password" "$1"
	else
		nmcli dev wifi con "$1" && notify-send -r 5 "$1" "Connected"
	fi >/dev/null 2>&1
}

radio=$(nmcli radio wifi)
if [ "$radio" = "disabled" ]; then
	notify-send -r 5 -u critical "WiFi is disabled"
	exit 1
fi

state=$(nmcli -g state dev status | rg "^.*:wifi:")
if [ "$state" = "unavailable" ]; then
	notify-send -r 5 -u critical "Interface is unavailable"
	exit 1
fi

networks=$(nmcli -g active,ssid,security,signal dev wifi)
connected=$(echo "$networks" | rg '^yes' | awk -F: '{print $4, $2}')

[ -n "$networks" ] && {
	list=$(echo "$networks" | awk -F: '{print $4, $2}')
	choice=$(
		echo "$list" | fuzzel --placeholder="$connected" -l 5 -w 40 -di
	) || exit 0
	ssid=$(echo "$choice" | cut -c4-)

	if [ "$choice" = "$connected" ]; then
		nmcli con down id "$ssid" >/dev/null 2>&1
		notify-send -r 5 "$ssid" "Disconnected"
	else
		security=$(
			echo "$networks" | awk -F: -v ssid="$(echo "$choice" | cut -d' ' -f2)" \
				'$2 == ssid {print $3}'
		)
		connect "$ssid"
	fi
}
