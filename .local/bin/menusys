#!/bin/sh

askSystem() {
	choice=$(
		printf "Lock\nLogout\nReboot\nShutdown\nSuspend" | fuzzel -l 5 -w 10 -di
	)

	case $choice in
	Lock) lock ;;
	Logout) riverctl exit ;;
	Reboot) doas reboot ;;
	Shutdown) doas dinitctl shutdown ;;
	Suspend) doas zzz ;;
	esac
}

([ "$1" = "lock" ] && lock) || askSystem
