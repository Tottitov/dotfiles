#!/bin/sh

play() { mpc -q clear && mpc -q findadd "$@" && mpc -q play; }

current() { mpc -q status "%status%" = "playing" && mpc -f "%${1}%" current; }

artist=$(mpc ls | fuzzel --placeholder="$(current albumartist)" -di) || exit 0
albums=$(mpc list album artist "$artist")

if [ "$(echo "$albums" | wc -l)" -gt 1 ]; then
	album=$(echo "$albums" | fuzzel --placeholder="$(current album)" -di) || exit 0
else
	album="$albums"
fi

choice=$(printf "Nope\nSure" | fuzzel -w $((${#album} + 25)) -dip "Add album '$album' to playlist? ") || exit 0

if [ "$choice" = "Nope" ]; then
	songs=$(mpc search -f "%track%\t%title%" album "$album" | sort -n -k1,1 | cut -f2-) || exit 0
	song=$(echo "$songs" | fuzzel --placeholder="$(current title)" -w 40 -di) || exit 0
	play title "$song"
else
	play album "$album"
fi
