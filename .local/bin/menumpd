#!/bin/sh

add() {
	mpc -q clear
	mpc -q findadd "$@"
	mpc -q play
}

current() {
	mpc -q status "%status%" = "playing" && mpc -f "%${1}%" current
}

artist=$(
	mpc ls | fuzzel --placeholder="$(current albumartist)" -l 20 -di
) || exit 0
albums=$(mpc list album artist "$artist")
albumCount=$(echo "$albums" | wc -l)

if [ "$albumCount" -gt 1 ]; then
	album=$(
		echo "$albums" | fuzzel \
			--placeholder="$(current album)" -l "$albumCount" -di
	) || exit 0
else
	album="$albums"
fi

choice=$(
	printf "Nope\nSure" | fuzzel \
		-l 2 -w 40 -dip "Add album '$album' to playlist? "
) || exit 0

if [ "$choice" = "Nope" ]; then
	songs=$(
		mpc search -f "%track%\t%title%" album "$album" | sort -n -k1,1 | cut -f2-
	) || exit 0
	songCount=$(echo "$songs" | wc -l)
	song=$(
		echo "$songs" | fuzzel \
			--placeholder="$(current title)" -l "$songCount" -w 40 -di
	) || exit 0
	add title "$song"
else
	add album "$album"
fi
