#!/bin/sh

saveshot() {
	grim -g "$(slurp -d)" "pic-selected-$(date '+%y%m%d-%H%M-%S').png"
}

savescreen() {
	grim "pic-full-$(date '+%y%m%d-%H%M-%S').png"
}

copyshot() {
	grim -g "$(slurp -d)" - | wl-copy
}

copyscreen() {
	grim - | wl-copy
}

editshot() {
	grim -g "$(slurp -d)" - | swappy -f -
}

editscreen() {
	grim - | swappy -f -
}

askscreenshot() {
	type=$(printf "edit\ncopy\nsave" | fuzzel -di -l 3) || exit 1
	screenshot=$(printf "shot\nscreen" | fuzzel -l 2 -di) || exit 1
	case ${type}${screenshot} in
	"saveshot") saveshot ;;
	"savescreen") savescreen ;;
	"copyshot") copyshot ;;
	"copyscreen") copyscreen ;;
	"editshot") editshot ;;
	"editscreen") editscreen ;;
	esac
}

case "$1" in
"copyshot") copyshot ;;
"copyscreen") copyscreen ;;
*) askscreenshot ;;
esac
