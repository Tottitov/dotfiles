#!/bin/sh

city=$(
	curl -fs http://ip-api.com/json | jq -r '.city' | tr ' ' '-'
) || exit 1

forecast=$(
	curl -fs --max-time 15 "https://v2.wttr.in/${city}?format=%C:%f"
) || exit 1

echo "$forecast" | rg -q "Unknown" && exit 1

weather=$(echo "$forecast" | cut -d ':' -f1 | xargs)
temperature=$(echo "$forecast" | awk -F ':' '{print $NF}')

echo "<span color=\"#bb9af7\">${weather}</span> $temperature" >"${XDG_DATA_HOME}/weather"
pkill -RTMIN+2 waybar
