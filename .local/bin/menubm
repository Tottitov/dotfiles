#!/bin/sh

library="${XDG_DATA_HOME}/bookmarks"

tags=$(cut -d' ' -f3 "$library" | sort -u)
tag=$(echo "$tags" | fuzzel --cache "$XDG_CACHE_HOME/tags" -w 15 -di) || exit 0

bookmarks=$(rg -w "$tag" "$library" | cut -d' ' -f2)
bookmark=$(echo "$bookmarks" | fuzzel --cache "$XDG_CACHE_HOME/bookmarks" -w 20 -di) || exit 0

$BROWSER "$(rg -w "$bookmark $tag" "$library" | cut -d' ' -f1)"
