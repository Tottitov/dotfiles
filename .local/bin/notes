#!/bin/sh

path="$HOME/docs/notes"

action() {
	file=$(
		find "$path" \
			-type f \
			-not -path "${path}/.git/*" \
			-printf '%f\n' | fzf --reverse
	) && $1 "$path/$file"
}

new() {
	title=$(gum input --placeholder "Note") || exit 1
	title=$(echo "$title" | tr '[:space:]' '-' | sed 's/-$//')

	file="${path}/${title}-$(date +%Y-%m-%d).md"
	[ ! -f "$file" ] && echo "# $title" >"$file"

	$EDITOR "$file"
}

case $1 in
'n') new ;;
'v') action mdcat ;;
'e') action "$EDITOR" ;;
*) exit 1 ;;
esac
